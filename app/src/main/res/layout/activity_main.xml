<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"


    tools:context=".MainActivity"
    android:backgroundTint="@color/black"
    >




    <TextView
        android:id="@+id/first_num"
        android:layout_width="0pt"
        android:layout_height="30pt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/second_num"
        app:layout_constraintBottom_toTopOf="@id/buttonTable"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="20dp"

        android:background="@color/black"/>

    <TextView
        android:id="@+id/second_num"
        android:layout_width="0pt"
        android:layout_height="30pt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/first_num"
        app:layout_constraintEnd_toStartOf="@id/text_view_res"
        app:layout_constraintBottom_toTopOf="@id/buttonTable"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="20dp"

        android:background="@color/black" />

    <TextView
        android:id="@+id/text_view_res"
        android:layout_width="wrap_content"
        android:layout_height="30pt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/second_num"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonTable"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="20dp"

        android:background="@color/black" />



<TableLayout
    android:id="@+id/buttonTable"
    android:layout_width="match_parent"
    android:layout_height="0pt"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/second_num"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"

>

<TableRow android:layout_weight="1">
    <Button
        android:id="@+id/button_7"
        android:layout_width="0pt"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/button_background"
        android:backgroundTint="@color/blue"
        android:layout_margin="1pt"
        android:textSize="10pt"
        android:text="7"


        />


    <Button
        android:id="@+id/button_8"
        android:layout_width="0pt"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:backgroundTint="@color/blue"
        android:layout_margin="1pt"
        android:textSize="10pt"
        android:text="8"
        android:background="@drawable/button_background"
        />


    <Button
        android:id="@+id/button_9"
        android:layout_width="0pt"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:backgroundTint="@color/blue"
        android:layout_margin="1pt"
        android:textSize="10pt"
        android:text="9"
        android:background="@drawable/button_background"/>


    <Button
        android:id="@+id/button_clear"
        android:layout_width="0pt"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:backgroundTint="@color/blue"
        android:layout_margin="1pt"
        android:text="C"
        android:textSize="10pt"
        android:background="@drawable/button_background"/>



</TableRow >

    <TableRow android:layout_weight="1" >
        <Button
            android:id="@+id/button_4"
            android:layout_width="0pt"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/blue"
            android:layout_margin="1pt"
            android:textSize="10pt"
            android:text="4"
            android:background="@drawable/button_background"/>


        <Button
            android:id="@+id/button_5"
            android:layout_width="0pt"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/blue"
            android:layout_margin="1pt"
            android:textSize="10pt"
            android:text="5"
            android:background="@drawable/button_background"/>


        <Button
            android:id="@+id/button_6"
            android:layout_width="0pt"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/blue"
            android:layout_margin="1pt"
            android:textSize="10pt"
            android:text="6"
            android:background="@drawable/button_background"/>

        <Button
            android:id="@+id/button_plus"
            android:layout_width="0pt"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/blue"
            android:layout_margin="1pt"
            android:textSize="10pt"
            android:text="+"
            android:background="@drawable/button_background"/>


    </TableRow>

    <TableRow android:layout_weight="1" >
        <Button
            android:id="@+id/button_1"
            android:layout_width="0pt"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/blue"
            android:layout_margin="1pt"
            android:textSize="10pt"
            android:text="1"
            android:background="@drawable/button_background"/>


        <Button
            android:id="@+id/button_2"
            android:layout_width="0pt"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/blue"
            android:layout_margin="1pt"
            android:textSize="10pt"
            android:text="2"
            android:background="@drawable/button_background"/>

        <Button
            android:id="@+id/button_3"
            android:layout_width="0pt"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/blue"
            android:layout_margin="1pt"
            android:textSize="10pt"
            android:text="3"
            android:background="@drawable/button_background"/>


        <Button
            android:id="@+id/button_minus"
            android:layout_width="0pt"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/blue"
            android:layout_margin="1pt"
            android:textSize="10pt"
            android:text="â€”"
            android:background="@drawable/button_background"/>


    </TableRow>

    <TableRow android:layout_weight="1" >
        <Button
            android:id="@+id/button_share"
            android:layout_width="0pt"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/blue"
            android:layout_margin="1pt"
            android:textSize="10pt"
            android:text="/"
            android:background="@drawable/button_background"/>

        <Button
            android:id="@+id/button_0"
            android:layout_width="0pt"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/blue"
            android:layout_margin="1pt"
            android:textSize="10pt"
            android:text="0"
            android:background="@drawable/button_background"/>

            <Button
                android:id="@+id/button_res"
                android:layout_width="0pt"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/blue"
                android:layout_margin="1pt"
                android:textSize="10pt"
                android:text="="
                android:background="@drawable/button_background"/>

        <Button
            android:id="@+id/button_multiply"
            android:layout_width="0pt"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/blue"
            android:layout_margin="1pt"
            android:textSize="10pt"
            android:text="*"
            android:background="@drawable/button_background"/>

    </TableRow>






















</TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>